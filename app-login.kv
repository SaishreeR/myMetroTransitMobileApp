MDScreen:
    name: "app-login"
    MDFloatLayout:
        md_bg_color:1,1,1,1
        MDIconButton:
            icon: "chevron-left"
            user_font_size: "35sp"
            pos_hint: {"center_y": .95}
        MDLabel:
            text: "Back"
            font_size: "18sp"
            pos_hint: {"center_x": .615, "center_y": .949}
        Image:
            source: "assets/mtm.png"
            size_hint: .26,.26
            pos_hint: {"center_x": .22, "center_y": .8}
        MDLabel:
            text: "Start with your"
            font_size: "22sp"
            color: 120/255,120/255,120/255,1
            pos_hint: {"center_x": .6, "center_y": .65}
        MDLabel:
            text: "Login"
            font_size: "28sp"
            color: 120/255,120/255,120/255,1
            pos_hint: {"center_x": .6, "center_y": .58}
