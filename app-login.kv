MDScreen:
    name: "app-login"
    MDFloatLayout:
        md_bg_color:1,1,1,1
        Image:
            source: "assets/mtm.png"
            size_hint: .26,.26
            pos_hint: {"center_x": .22, "center_y": .8}
        MDLabel:
            text: "Start with your Login"
            font_size: "22sp"
            color: 120/255,120/255,120/255,1
            pos_hint: {"center_x": .6, "center_y": .65}

        MDLabel:
            text: "Username"
            font_size: "14sp"
            pos_hint: {"center_x": .6, "center_y": .52}
        MDTextField:
            id: txtUsername
            hint_text: "User Name"
            pos_hint: {"center_x": .65, "center_y": .52}
            size_hint_x: .5
            icon_right: 'account'
        MDLabel:
            text: "Password"
            font_size: "14sp"
            pos_hint: {"center_x": .6, "center_y": .42}
        MDTextField:
            id: txtPassword
            hint_text: "Password"
            pos_hint: {"center_x": .65, "center_y": .42}
            size_hint_x: .5
            password: True
            icon_right: 'eye-off'
        MDBoxLayout:
            adaptive_height: True
            height: "30dp"
            pos_hint: {"center_x": .55, "center_y": .32}
            MDCheckbox:
                id: chkSP
                size_hint: None,None
                width: "30dp"
                height: "30dp"
                on_press:
                    txtPassword.password = False if txtPassword.password == True else True
                    txtPassword.icon_right = "eye" if txtPassword.icon_right == "eye-off" else "eye-off"
            MDLabel:
                text: "[ref=Show Password]Show Password[/ref]"
                markup: True
                pos_hint: {"center_x": .55, "center_y": .40}
                halign: "left"
                valign: "top"
                on_ref_press:
                    chkSP.active = False if chkSP.active == True else True
                    txtPassword.password = False if txtPassword.password == True else True
        MDButton:
            style: "filled"
            pos_hint: {"center_x": .45, "center_y": .22}
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "app-home"
            MDButtonText: 
                text: "Sign In"
                text_color: "white"

        MDButton:
            style: "filled"
            pos_hint: {"center_x": .80, "center_y": .22}
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "app-signup"
            MDButtonText: 
                text: "Sign Up"
                text_color: "white"


       









