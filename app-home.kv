#                MDNavigationItemIcon:
#                    icon: "ticket"
#                MDNavigationItemLabel:
#                    text: "My Tickets"
            MDNavigationItem:
                MDNavigationItemIcon:
                    icon: "home"
                MDNavigationItemLabel:
                    text: "Home"
            MDNavigationItem:
                MDNavigationItemIcon:
                    icon: "information"
                MDNavigationItemLabel:
                    text: "About"
            MDNavigationItem:
                MDNavigationItemIcon:
                    icon: "logout"
                MDNavigationItemLabel:
                    text: "Logout"






    

